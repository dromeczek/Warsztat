@model WorkshoManager.Models.Part

@{
    ViewData["Title"] = "Usuń część";
}

<h2>Czy na pewno chcesz usunąć tę część?</h2>

<dl class="row">
    <dt class="col-sm-2">Nazwa</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Cena</dt>
    <dd class="col-sm-10">@Model.UnitPrice zł</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Usuń</button>
    <a class="btn btn-secondary" asp-action="Index">Anuluj</a>
</form>