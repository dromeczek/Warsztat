@model WorkshoManager.Models.Vehicle

<h2>Dodaj pojazd</h2>

@if (TempData["Errors"] != null)
{
    <div class="alert alert-danger">
        @TempData["Errors"]
    </div>
}

<form asp-action="Create" method="post" enctype="multipart/form-data">

    <input type="hidden" asp-for="CustomerId" />

    @if (Model.CustomerId != 0)
    {
        <input type="hidden" asp-for="CustomerId" />
    }
    else
    {
        <div class="form-group">
            <label asp-for="CustomerId" class="control-label"></label>
            <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.Customers">
                <option value="">-- wybierz klienta --</option>
            </select>
            <span asp-validation-for="CustomerId" class="text-danger"></span>
        </div>
    }

    <div class="form-group">
        <label asp-for="Brand"></label>
        <input asp-for="Brand" class="form-control" />
        <span asp-validation-for="Brand" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Model"></label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="VIN"></label>
        <input asp-for="VIN" class="form-control" />
        <span asp-validation-for="VIN" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RegistrationNumber"></label>
        <input asp-for="RegistrationNumber" class="form-control" />
        <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Year"></label>
        <input asp-for="Year" class="form-control" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Image">Zdjęcie pojazdu (PNG, JPG)</label>
        <input type="file" name="Image" class="form-control" accept=".png,.jpg,.jpeg" />
    </div>

    <button type="submit" class="btn btn-primary">Zapisz</button>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
